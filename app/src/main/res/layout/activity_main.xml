<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity">

    <!-- 1. Элементы в разных углах экрана -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/border_red_rounded"
        android:gravity="center"
        android:padding="8dp"
        android:text="left | top"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/border_green"
        android:gravity="center"
        android:padding="8dp"
        android:text="left | bottom"
        android:textColor="#00FF00"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/border_blue_rounded"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/right_top"
        android:textColor="#0000FF"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/border_yellow"
        android:gravity="center"
        android:padding="8dp"
        android:text="right | bottom"
        android:textColor="#FFFF00"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Элементы по центру сторон -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/border_purple"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="center left"
        android:textColor="#800080"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/border_orange_rounded_gradient"
        android:gravity="center"
        android:padding="12dp"
        android:text="center bottom"
        android:textColor="#FFA500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/border_cyan"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="center right"
        android:textColor="#00FFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/border_pink"
        android:gravity="center"
        android:padding="10dp"
        android:text="center top"
        android:textColor="#FFC0CB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/centerTextView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#2E7D32"
        android:gravity="bottom|end"
        android:padding="15dp"
        android:paddingStart="8dp"
        android:paddingLeft="4dp"
        android:text="/текст\"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Дополнительные элементы для демонстрации разных единиц измерения -->
    <!-- dp -->
    <TextView
        android:id="@+id/sizeDemo1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="100dp x 50dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <!-- px -->
    <TextView
        android:id="@+id/sizeDemo2"
        android:layout_width="150px"
        android:layout_height="70px"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="150px x 70px"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/sizeDemo1"
        app:layout_constraintEnd_toStartOf="@+id/sizeDemo1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sizeDemo1" />

    <!-- mm -->
    <TextView
        android:id="@+id/sizeDemo3"
        android:layout_width="15mm"
        android:layout_height="3mm"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="15mm x 3mm"
        app:layout_constraintBottom_toBottomOf="@+id/sizeDemo1"
        app:layout_constraintEnd_toStartOf="@+id/sizeDemo2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sizeDemo2" />

    <!-- pt -->
    <TextView
        android:id="@+id/sizeDemo4"
        android:layout_width="45dp"
        android:layout_height="19dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="20pt x 10pt"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/sizeDemo1"
        app:layout_constraintEnd_toStartOf="@+id/sizeDemo3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sizeDemo3" />

    <!-- in -->
    <TextView
        android:id="@+id/sizeDemo5"
        android:layout_width="0.25in"
        android:layout_height="0.125in"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="0.25in x 0.125in"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/sizeDemo1"
        app:layout_constraintEnd_toStartOf="@+id/sizeDemo4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sizeDemo4" />

</androidx.constraintlayout.widget.ConstraintLayout>